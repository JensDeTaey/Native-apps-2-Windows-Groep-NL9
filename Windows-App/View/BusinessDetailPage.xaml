                <ListView Margin="13,0,0,0" x:Name="listViewOpeningHours" ItemsSource="{Binding OpeningHours}" HorizontalAlignment="Left" >
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="MinHeight" Value="25" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                                <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Day}"/>
                                        <TextBlock Grid.Column="1" Text=": "/>
                                        <TextBlock Grid.Column="2" Text="{Binding OpeningsHour}"/>
                                        <TextBlock Grid.Column="3" Text=" - "/>
                                <TextBlock Grid.Column="4" Text="{Binding ClosingsHour}"/>
                            </Grid>
                        </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Beschikbare promoties:" FontWeight="Bold"/>
                        <ListView ItemsSource="{Binding Promotions}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="MinHeight" Value="25" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="5" Grid.Column="0">
                                        <TextBlock Text="{Binding Name}"/>
                                        <TextBlock Text="{Binding Description}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Geldig van: "/>
                                            <TextBlock Text="{Binding StartDate}"/>
                                            <TextBlock Text=" tot "/>
                                            <TextBlock Text="{Binding EndDate}"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding IsDiscountCoupon}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Beschikbare Evenementen:" FontWeight="Bold"/>
                        <ListView  ItemsSource="{Binding Events}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="MinHeight" Value="25" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="5" Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Description}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Vindt plaats van: "/>
                                            <TextBlock Text="{Binding BeginDate}"/>
                                            <TextBlock Text=" tot "/>
                                            <TextBlock Text="{Binding EndDate}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
        </DataTemplate>

