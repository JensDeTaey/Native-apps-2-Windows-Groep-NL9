                    <StackPanel Orientation="Vertical" >
                        <Image Source="../Images/ikeaEstablishment.jpg" HorizontalAlignment="Left" Width="auto" Margin="0,10,10,10" VerticalAlignment="Top"  RenderTransformOrigin="0.188,0.488"/>
                        <StackPanel Orientation="Horizontal" >
