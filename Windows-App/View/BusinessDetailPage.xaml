            </Grid.ColumnDefinitions>
            
        </Grid-->
        <!--maps met meerdere points die verschillende vestigingen laat zien-->

    <Page.Resources>
        <DataTemplate x:Key="SmallScreenTemplate">
            <!--Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Width="300"  Orientation="Horizontal" Margin="0,10,0,40">
                    <StackPanel Orientation="Vertical">
                        <Image Source="../Images/ikea.png" HorizontalAlignment="Left" Width="300" Margin="10,10,10,10" VerticalAlignment="Top"  RenderTransformOrigin="0.188,0.488"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </StackPanel>
            </-->
        </DataTemplate>
        <DataTemplate x:Key="DesktopTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,40">
                    <StackPanel Orientation="Vertical">
                        <Image Source="../Images/ikea.png" HorizontalAlignment="Left" Width="300" Margin="10,10,10,10" VerticalAlignment="Top"  RenderTransformOrigin="0.188,0.488"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="Maaltekouter 2, 9051 Gent"/>
                        <TextBlock Text="02 719 19 22"/>
                        <TextBlock Text="openingsuren: woensdag 10:00–20:00"/>

                    </StackPanel>

                </StackPanel>
            </Grid>
        </DataTemplate>

    </Page.Resources>

    <StackPanel  Spacing="10" Margin="20,10,0,0">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Small">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="listViewEstablishments.ItemTemplate" Value="{StaticResource SmallScreenTemplate}" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="listViewEstablishments.ItemTemplate" Value="{StaticResource DesktopTemplate}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <TextBlock Text="Ikea" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="Meubilair" FontSize="9" HorizontalAlignment="Center" Margin="0,-14.3,0,0"/>
        <TextBlock Text="beschrijving van ikea enzo" HorizontalAlignment="Center"/>
        <ListView x:Name="listViewEstablishments" ItemsSource="{Binding Establishments}" HorizontalAlignment="Left" >
        </ListView>
        <TextBlock Text="Link to our website: www.google.com (jaja wij hebben google gemaakt)" HorizontalAlignment="Center"/>
    </StackPanel>
    
</Page>
